doctype xml

interface
  requires(lib="gtk+" version="3.20")/
  
  object(class="GtkHeaderBar" id="app_headerbar")
    style: class(name="app_headerbar")/
    property(name="show_close_button") False
    property(name="can_focus") False
    property(name="visible") True
    
    child(type="title")
      object(class="GtkBox")
        property(name="visible") 1
        style
          class(name="app_headerbar_radio")/
          class(name="linked")/
      
        child: object(class="GtkRadioButton" id="btn-home")
          style: class(name="image-button")/
          property(name="draw-indicator") 0
          property(name="visible") 1
          property(name="active") 1
            
          child: object(class="GtkImage" id="btn-home-image")
            property(name="icon-size") 1
            property(name="visible") 1
          
        child: object(class="GtkRadioButton" id="btn-reader")
          style: class(name="image-button")/
          property(name="draw-indicator") 0
          property(name="group") btn-home
          property(name="visible") 1
          property(name="active") 0
            
          child: object(class="GtkImage" id="btn-reader-image")
            property(name="icon-size") 1
            property(name="visible") 1
    
    child
      object(class="GtkBox")
        property(name="baseline-position") center
        property(name="visible") 1
        child
          object(class="GtkButton" id="toggle_sidebar")
            property(name="receives_default") True
            property(name="can_focus") True
            property(name="visible") True
            style: class(name="menu-button")/
            
            child: object(class="GtkImage" id="btn-menu-image")
              property(name="icon-size") 1
              property(name="visible") 1
          
          packing
            property(name="expand") False
            property(name="fill") False
            property(name="position") 0
        
        child
          object(class="GtkEntry" id="search_input")
            style: class(name="headerbar-search")/
            property(name="activates-default") True
            property(name="can_focus") True
            property(name="editable") True
            property(name="visible") True
            
          packing
            property(name="expand") False
            property(name="fill") False
            property(name="position") 1
        
        child
          object(class="GtkImage" id="btn-search-image")
            property(name="icon-size") 1
            property(name="visible") 1
          
          packing
            property(name="expand") False
            property(name="fill") False
            property(name="position") 2