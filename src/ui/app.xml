<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20" />

  <object class="GtkWindow" id="app_window">
    <property name="title" translatable="yes">Builder Basics</property>
    <property name="default_height">500</property>
    <property name="default_width">800</property>

    <child type="titlebar">
      <object class="GtkHeaderBar" id="app_headerbar">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="show_close_button">False</property>
        
        <style><class name="app_headerbar"/></style>

        <child type="title">
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <child>
              <object class="GtkBox">
                <property name="visible">1</property>
                <style>
                  <class name="linked"/>
                  <class name="app_headerbar_radio"/>
                </style>

                <child>
                  <object class="GtkRadioButton" id="btn-home">
                    <property name="draw-indicator">0</property>
                    <property name="visible">1</property>
                    <property name="active">1</property>
                    <style><class name="image-button"/></style>
                    
                    <child>
                      <object class="GtkImage" id="btn-home-image">
                        <property name="icon-size">1</property>
                        <property name="visible">1</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkRadioButton" id="btn-reader">
                    <property name="draw-indicator">0</property>
                    <property name="group">btn-home</property>
                    <property name="visible">1</property>
                    <property name="active">0</property>
                    <style><class name="image-button"/></style>
                    
                    <child>
                      <object class="GtkImage" id="btn-reader-image">
                        <property name="icon-size">1</property>
                        <property name="visible">1</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <child>
              <object class="GtkBox">
                <property name="baseline-position">center</property>
                <property name="visible">1</property>

                <child>
                  <object class="GtkButton" id="settings_button">
                    <property name="receives_default">True</property>
                    <property name="can_focus">False</property>
                    <property name="visible">True</property>
                    <style><class name="menu-button"/></style>

                    <child>
                      <object class="GtkImage" id="btn-menu-image">
                        <property name="icon-size">1</property>
                        <property name="visible">1</property>
                      </object>
                    </child>
                  </object>

                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">False</property>
                    <property name="position">0</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkEntry">
                    <property name="placeholder-text">Поиск...</property>
                    <property name="activates-default">True</property>
                    <property name="can_focus">True</property>
                    <property name="editable">True</property>
                    <property name="visible">True</property>
                    
                    <style><class name="headerbar-search" /></style>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">False</property>
                    <property name="position">1</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkImage" id="btn-search-image">
                    <property name="icon-size">1</property>
                    <property name="visible">1</property>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">False</property>
                    <property name="position">2</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="app_container">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <style>
          <class name="container" />
        </style>
        <child>
          <object class="GtkRevealer" id="sidebar">
            <property name="transition_type">slide-left</property>
            <property name="reveal_child">True</property>
            <property name="can_focus">False</property>
            <property name="visible">True</property>
            <style><class name="sidebar-root" /></style>

            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="can_focus">False</property>
                <property name="visible">True</property>
                <style><class name="sidebar" /></style>

                <child>
                  <object class="GtkBox" id="sidebar-header">
                    <property name="orientation">vertical</property>
                    <property name="can_focus">False</property>
                    <property name="visible">True</property>
                    <style><class name="sidebar-header" /></style>

                    <child>
                      <object class="GtkImage" id="sidebar-logo-image">
                        <property name="icon-size">1</property>
                        <property name="visible">1</property>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">True</property>
                        <property name="position">0</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Lurkmore</property>
                        <property name="can_focus">False</property>
                        <property name="visible">True</property>
                        <style><class name="sidebar-header-label" /></style>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">True</property>
                        <property name="position">1</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">0</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="baseline-position">center</property>
                    <property name="orientation">vertical</property>
                    <property name="visible">1</property>
                    <style><class name="sidebar-list" /></style>

                    <child>
                      <object class="GtkButton">
                        <property name="label" translatable="yes">Home</property>
                        <property name="receives_default">True</property>
                        <property name="can_focus">True</property>
                        <property name="visible">True</property>
                        <property name="relief">half</property>
                        <property name="xalign">0.0</property>

                        <style><class name="sidebar-list-button" /></style>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="position">0</property>
                        <property name="fill">False</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkButton">
                        <property name="label" translatable="yes">About</property>
                        <property name="receives_default">True</property>
                        <property name="can_focus">True</property>
                        <property name="visible">True</property>
                        <property name="relief">half</property>
                        <property name="xalign">0.0</property>

                        <style><class name="sidebar-list-button" /></style>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="position">1</property>
                        <property name="fill">False</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkButton">
                        <property name="label" translatable="yes">Settings</property>
                        <property name="receives_default">True</property>
                        <property name="can_focus">True</property>
                        <property name="visible">True</property>
                        <property name="relief">half</property>
                        <property name="xalign">0.0</property>

                        <style><class name="sidebar-list-button" /></style>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="position">2</property>
                        <property name="fill">False</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">True</property>
                    <property name="position">1</property>
                    <property name="fill">True</property>
                  </packing>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>
        <child>
          <placeholder/>
        </child>
      </object>
    </child>
  </object>
</interface>