<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20" />

  <object class="GtkBox" id="page_reader">
    <property name="orientation">vertical</property>
    <property name="can_focus">False</property>
    <property name="visible">True</property>
    <style><class name="sidebar" /></style>
    <child>
      <object class="GtkButton">
        <property name="label" translatable="yes">Page Reader</property>
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">True</property>
        <property name="relief">half</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">0</property>
      </packing>
    </child>
  </object>
  
  <object class="GtkBox" id="page_about">
    <property name="orientation">vertical</property>
    <property name="can_focus">False</property>
    <property name="visible">True</property>
    <style><class name="sidebar" /></style>
    <child>
      <object class="GtkButton">
        <property name="label" translatable="yes">About Page</property>
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">True</property>
        <property name="relief">half</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">0</property>
      </packing>
    </child>  
  </object>
  
  <object class="GtkBox" id="page_home">
    <property name="orientation">vertical</property>
    <property name="can_focus">False</property>
    <property name="visible">True</property>
    <style><class name="sidebar" /></style>
    <child>
      <object class="GtkButton">
        <property name="label" translatable="yes">HomePage</property>
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">True</property>
        <property name="relief">half</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">0</property>
      </packing>
    </child>  
  </object>
</interface>